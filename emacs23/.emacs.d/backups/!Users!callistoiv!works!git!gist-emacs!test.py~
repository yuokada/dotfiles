#!/usr/bin/env  python2.6
# -*- coding: utf-8 -*-

import time

def deco_time(func):
    def d(n):
        start = time.time()
        ret = func(n)
        print "It takes %.5f to call %s() " % (time.time()-start,func.__name__)
        return ret
    return d

@deco_time
def sum1(n):
    sum = 0
    for i in range(n):
        sum += i
    return sum

if __name__ == '__main__':
    print sum1(10000)
